<% require 'date'%>

<table>
    <p>Events that I haved created</p>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Location</th>
      <th>Date</th>
      <th>Creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% Event.all.each do |event| %>
        <% if current_user.id == event.creator.id%>
          <tr>
            <td><%= event.name %></td>
            <td><%= event.description %></td>
            <td><%= event.location %></td>
            <td><%= event.date %></td>
            <td><%= event.creator.name %></td>
            <td><%= link_to 'Show', event %></td>
            <td><%= link_to 'Edit', edit_event_path(event) %></td>
            <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <%end%>
    <% end %>
  </tbody>
</table>
<table>
    <p>Events that I am attending</p>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Location</th>
      <th>Date</th>
      <th>Creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% EventAttendance.all.each do |eventattendance| %>
        <% if current_user.id == eventattendance.attendee_id%>
            <% Event.all.each do |event| %>
                <%if event.id == eventattendance.attended_event_id%>
                    <tr>
                        <td><%= event.name %></td>
                        <td><%= event.description %></td>
                        <td><%= event.location %></td>
                        <td><%= event.date %></td>
                        <td><%= event.creator.name %></td>
                        <td><%= link_to 'Show', event %></td>
                    </tr>
                <%end%>
            <%end%>
        <%end%>
    <% end %>
  </tbody>
</table>

